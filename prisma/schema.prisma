generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(uuid())
  name            String?
  email           String           @unique
  password        String?
  role            Role             @default(USER)
  active          Boolean          @default(true)
  lastLogin       DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  inviteToken         String?
  inviteExpiresAt     DateTime?
  passwordResetToken  String?
  passwordResetExpiresAt DateTime?
  productName     String?
  productId       String?
  status          UserStatus       @default(REGISTERED)
  plan            String?
  inviteSentAt    DateTime?
  letters         CreditLetter[]
  followUps       FollowUpLetter[]
  uploads         UploadedFile[]

  @@index([inviteToken])
  @@index([passwordResetToken])
}

model CreditLetter {
  id            String   @id @default(uuid())
  userId        String
  bureau        String
  creditorName  String
  accountNumber String?
  letterType    String
  tone          String
  content       String
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FollowUpLetter {
  id        String   @id @default(uuid())
  userId    String
  day       Int
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Workflow {
  id        String   @id @default(uuid())
  name      String
  steps     Json
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
}

model UploadedFile {
  id         String   @id @default(uuid())
  filename   String
  filepath   String
  fileType   String
  uploadedBy String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)
}

model AIPrompt {
  id      String  @id @default(uuid())
  type    String
  content String
  enabled Boolean @default(true)
}

model Disclaimer {
  id      String  @id @default(uuid())
  type    String
  content String
  enabled Boolean @default(true)
}

model ResourceLink {
  id          String  @id @default(uuid())
  title       String
  url         String
  type        String  @default("EXTERNAL")
  description String?
  visible     Boolean @default(true)
}

model FeatureToggle {
  id           String   @id @default(uuid())
  feature_name String   @unique
  enabled      Boolean  @default(false)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("feature_toggles")
}

model LetterTemplate {
  id         String  @id
  category   String
  content    String
  disclaimer String?
  enabled    Boolean @default(true)
}

enum Plan {
  MONTHLY
  ANNUAL
}

enum UserStatus {
  REGISTERED
  INVITED
  ACTIVE
}

enum Role {
  ADMIN
  USER
}
