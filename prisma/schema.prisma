generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String   // Added for auth
  role      Role     @default(USER)
  active    Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  letters        CreditLetter[]
  followUps      FollowUpLetter[]
  uploads        UploadedFile[]
}

model CreditLetter {
  id            String   @id @default(uuid())
  userId        String
  bureau        String
  creditorName  String
  accountNumber String?
  letterType    String
  tone          String
  content       String
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FollowUpLetter {
  id        String   @id @default(uuid())
  userId    String
  day       Int      // 15, 30, 45
  content   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Workflow {
  id        String   @id @default(uuid())
  name      String
  steps     Json
  enabled   Boolean @default(true)
  createdAt DateTime @default(now())
}

model UploadedFile {
  id         String   @id @default(uuid())
  filename   String
  filepath   String
  fileType   String
  uploadedBy String
  createdAt  DateTime @default(now())

  user User @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)
}

model AIPrompt {
  id      String  @id @default(uuid())
  type    String
  content String
  enabled Boolean @default(true)
}

model LetterTemplate {
  id         String  @id @default(uuid())
  category   String
  content    String
  disclaimer String?
  enabled    Boolean @default(true)
}

model Disclaimer {
  id      String  @id @default(uuid())
  type    String
  content String
  enabled Boolean @default(true)
}

model ResourceLink {
  id          String  @id @default(uuid())
  title       String
  url         String
  type        String  @default("EXTERNAL") // VIDEO, EXTERNAL, COMMUNITY
  description String?
  visible     Boolean @default(true)
}

enum Role {
  ADMIN
  USER
}
